{% extends "AppBundle::base.html.twig" %}

{% block title %}{{ gameName }} - Édition {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
    <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/AppBundle/Game/game_edit.css') }}">

{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h2 id="game-name">{{ gameName }}</h2>
            </div>
        </div>
        <fieldset>
            <legend>Caractéristiques autoriséees</legend>
            
            <div class="row">
                <div class="col-sm-6">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Valeur max</th>
                        </tr>
                        </thead>
                        <tbody id="allowed-characteristics">
                        {% for characteristic in characteristics %}
                            <tr>
                                <td class="characteristic-name"> {{ characteristic.name }}</td>
                                <td class="characteristic-has-max">
                                    <select class="form-control input-xs has-max">
                                        <option>Oui</option>
                                        <option {% if not characteristic.hasMax %}selected{% endif %}>Non</option>
                                    </select>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger remove-characteristic">Supprimer
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            
            
            <form class="row" method="get" action="javascript:void(0)">
                <div class="form-group col-xs-6 col-sm-3 col-lg-2 ">
                    <input type="text" class="form-control" id="new-characteristic"
                           placeholder="Nom" required>
                </div>
                <button type="submit" class="btn btn-default col-xs-6 col-sm-3 col-lg-2" id="add-characteristic">Ajouter
                </button>
            </form>
        </fieldset>
        
        <fieldset>
            <legend>Participants</legend>
            <div class="row">
                <div class="col-sm-6">
                
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="panel panel-default">
                        <div class="panel-heading clearfix row" style="margin: 0;">
                            
                            <div class="input-group col-xs-offset-7">
                                <input type="text" class="form-control" id="new-player"
                                       placeholder="Ajouter un utilisateur">
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Utilisateur</th>

                        </tr>
                        </thead>
                        <tbody id="players">
                        {% for player in players %}
                            <tr>
                                <td class="player-name">{{ player.user.username }}</td>
                                <td>
                                    <button type="button" class="btn btn-danger remove-player">Retirer
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        
        </fieldset>
    
    
    </div>
{% endblock %}




{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('js/AppBundle/Game/game_edit.js') }}"></script>
{% endblock %}