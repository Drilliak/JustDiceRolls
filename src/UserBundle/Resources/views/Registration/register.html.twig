{% extends "UserBundle::base.html.twig" %}

{% block title %}
    Inscription
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/UserBundle/Security/login.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="{{ path('fos_user_security_login') }}" class="active" id="register-form-link">Se connecter</a>
                            </div>
                        </div>
                    
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register', 'id': 'register-form'}}) }}
                                
                                {{ form_errors(form) }}
                                
                                <div class="form-group">
                                    {{ form_widget(form.username, {'attr':
                                        {
                                            'id': form.username.vars.id,
                                            'tabindex': '1',
                                            'class': 'form-control',
                                            'placeholder': 'Nom d\'utilisateur',
                                            'name': form.username.vars.full_name,
                                            'required': 'required',
                                            'maxlength': form.username.vars.attr.maxlength,
                                            'pattern': form.username.vars.attr.pattern
                                        }
                                    }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.email, {'attr':
                                        {
                                            'type': 'email',
                                            'id': form.email.vars.id,
                                            'tabindex': '2',
                                            'class': 'form-control',
                                            'placeholder': 'Email',
                                            'name': form.email.vars.full_name,
                                            'required': 'required'
                                            
                                        }
                                    }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.children.first, {'attr':
                                        {
                                            'type': 'password',
                                            'id': form.plainPassword.children.first.vars.id,
                                            'tabindex': '3',
                                            'class': 'form-control',
                                            'placeholder': 'Mot de passe',
                                            'name': form.plainPassword.children.first.vars.full_name,
                                            'required': 'required'
                                        }
                                    }) }}
                                </div>
                                
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.children.second, {'attr':
                                        {
                                            'type': 'password',
                                            'id': form.plainPassword.children.second.vars.id,
                                            'tabindex': '3',
                                            'class': 'form-control',
                                            'placeholder': 'Confirmer le mot de passe',
                                            'name': form.plainPassword.children.second.vars.full_name,
                                            'required': 'required'
                                        }
                                    }) }}
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4"
                                                   class="form-control btn btn-register" value="S'inscrire">
                                        </div>
                                    </div>
                                </div>
                                
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

